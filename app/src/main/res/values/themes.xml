<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Animelist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/slate_800</item>
        <item name="graph_text_color">@color/slate_800</item>
        <item name="accent_color">@color/accent_color</item>
        <item name="graph_dot_color">@color/graph_dot_color</item>
        <item name="fill_color">@color/fill_color</item>
    </style>
    <style name="Theme.Animelist.Background">
        <item name="android:background">@color/gray</item>
    </style>
    <style name="Theme.Animelist.Card" parent="Theme.Animelist">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/rounded_background</item>
    </style>
    <style name="Theme.Animelist.Textbox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>
</resources>